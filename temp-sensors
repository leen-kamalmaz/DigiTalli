#include <Wire.h>
#include <Adafruit_MLX90614.h>
#define redLight 12
#define greenLight 13

//constructor
Adafruit_MLX90614 mlx = Adafruit_MLX90614();

void setup() {
  Serial.begin(9600);
  pinMode(redLight, OUTPUT);
  pinMode(greenLight, OUTPUT);
  Serial.println("Getting Your Temperature...."); 
  //intialize 
  mlx.begin();
}

void loop() {
  digitalWrite(greenLight, HIGH);
  //call print function
  printTemp('C');// in C
  printTemp('F'); // in F
  if( getTemp('C')>35) {
     digitalWrite(redLight, HIGH);
     digitalWrite(greenLight, LOW);
  }
  else {
    digitalWrite(redLight, LOW);
    digitalWrite(greenLight, HIGH);
  }
  Serial.println("---------"); //next reading
  delay(3000); //3 second delay
}

float getTemp(char type) {
  float value;//store temp
  float tempObjec = mlx.readObjectTempC();
  if(type =='F') {
    value = mlx.readObjectTempF(); 
  } else if(type =='C') {
    value = tempObjec;
  }
  return value;//returns temp
}

void printTemp(char type) {
  //stores temp in variable
  float tmp =getTemp(type);
  
  //print for celcius
  if(type =='C') {
    Serial.print("Celcius Temp:");
    Serial.print(" ");
    Serial.print(tmp);//print temp
    Serial.print("°");
    Serial.println("C");
  }
  //print for farenheit
  else if(type =='F') {
    Serial.print("Farenheit Temp:");
    Serial.print(" ");
    Serial.print(tmp);
    Serial.print("°");
    Serial.println("F");
  }
}
